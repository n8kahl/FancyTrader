{
  "$schema": "https://railway.app/railpack/plan.schema.json",
  "phases": {
    "install": {
      "steps": [
        {
          "cmd": "corepack enable && corepack prepare pnpm@9.12.0 --activate && pnpm install"
        }
      ]
    },
    "build": {
      "steps": [
        {
          "cmd": "pnpm --filter @fancytrader/backend build"
        }
      ]
    },
    "start": {
      "steps": [
        {
          "cmd": "node apps/backend/dist/index.js"
        }
      ]
    }
  }
}
