{
  "name": "fancytrader-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20 <21",
    "pnpm": ">=9 <10"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test -- --coverage",
    "format": "prettier --write .",
    "e2e": "playwright test",
    "build:tokens": "style-dictionary build --config tools/style-dictionary.config.js",
    "watch:tokens": "style-dictionary build --config tools/style-dictionary.config.js --watch",
    "sync:figma-flow": "ts-node tools/figma-flow-sync.ts --flow=trade",
    "sync:figma-flow:trade": "ts-node tools/figma-flow-sync.ts --flow=trade",
    "sync:figma-flow:watchlist": "ts-node tools/figma-flow-sync.ts --flow=watchlist",
    "sync:figma-flow:alerts": "ts-node tools/figma-flow-sync.ts --flow=alerts",
    "sync:figma-flow:onboarding": "ts-node tools/figma-flow-sync.ts --flow=onboarding",
    "sync:figma-flow:strategies": "ts-node tools/figma-flow-sync.ts --flow=strategies"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.50.1",
    "@tokens-studio/sd-transforms": "^2.0.1",
    "@types/node": "^20.16.5",
    "@typescript-eslint/eslint-plugin": "8.12.2",
    "@typescript-eslint/parser": "8.12.2",
    "eslint": "9.14.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-testing-library": "^7.2.1",
    "globals": "^16.5.0",
    "prettier": "3.3.3",
    "style-dictionary": "^5.1.1",
    "ts-node": "^10.9.2",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.46.3"
  },
  "type": "module"
}
