# --- Project-wide canonical variables (configured in the Railway Project Variables section) ---
NODE_ENV=production
TRUST_PROXY=true
LOG_LEVEL=info
REQUEST_BODY_LIMIT=1mb

# CORS allowlist (comma-separated)
CORS_ALLOWLIST=https://fancy-trader-front.up.railway.app,https://fancy-trader.up.railway.app,http://localhost:5173,http://localhost:5174

# Massive (primary data provider)
MASSIVE_API_KEY=
MASSIVE_BASE_URL=https://api.massive.com
MASSIVE_WS_BASE=wss://socket.massive.com
MASSIVE_WS_CLUSTER=options
FEATURE_ENABLE_MASSIVE_STREAM=true
FEATURE_MOCK_MODE=false
MASSIVE_REST_BASE=https://api.massive.com
MASSIVE_AUTH_MODE=query

# WebSocket tuning
WS_MAX_PAYLOAD_BYTES=1000000
WS_HEARTBEAT_INTERVAL_MS=15000
WS_IDLE_CLOSE_MS=60000
WS_RECONNECT_MAX_ATTEMPTS=5
WS_RECONNECT_BASE_MS=1000

# Rate limiting
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_WRITE_MAX=25

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_KEY=
SUPABASE_ANON_KEY=

# Discord (optional)
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=

# Admin guard
ADMIN_KEY=fancytrader

# Scaling hints
MIN_INSTANCES=1
MAX_INSTANCES=1

# Worker overrides
WORKER_SYMBOLS=SPY,QQQ
WORKER_METRICS_PORT=9100

# Frontend overrides
VITE_BACKEND_URL=
VITE_BACKEND_WS_URL=
VITE_DEMO_USER_ID=demo-user
